<?xml version="1.0" encoding="ISO-8859-1"?>
<config>
	<log>
  		<ident>propel-whiteboard</ident>
  		<level>7</level>
 	</log>
 	<propel>
  		<datasources default="whiteboard">
	   		<datasource id="whiteboard">
		    	<!-- the Propel adapter will usually be the same as phptype of connection DSN -->
		    	<adapter>mysql</adapter>
		    	<connection>
		     		<phptype>mysql</phptype>
		     		<database>whiteboard</database>
		     		<hostspec>localhost</hostspec>
		     		<username>whiteboard</username>
		     		<password>whiteboard</password>
		    	</connection>
	   		</datasource>
  		</datasources>
 	</propel>
</config>